<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <View
        android:background="#00ff2222"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <com.example.ouhouse.PullUpToLoadMore
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ptlm"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.example.ouhouse.MyScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/house_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/two"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="这里是标题"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/x_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="子标题"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/val"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="价格"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/age"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="产权年限"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="装修情况"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/user_count"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="规划户数"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/car"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="车位数"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/cover_area"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="占地面积"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/covered_are"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="建筑面积"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/property_company"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="物业公司"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/property_fee"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="物业费"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/phone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="联系号码"
                    android:textSize="18dp"/>
                <Button
                    android:id="@+id/like_btn"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:text="收藏"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_button"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="50dp"
                        android:background="#b11"
                        android:gravity="center"
                        android:text="继续拖动查看图文详细"
                        android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>
        </com.example.ouhouse.MyScrollView>
        <com.example.ouhouse.MyScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/img1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img6"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img7"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
                <ImageView
                    android:id="@+id/img8"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/four"/>
            </LinearLayout>
        </com.example.ouhouse.MyScrollView>

    </com.example.ouhouse.PullUpToLoadMore>
    <Button
        android:text="回到顶部"
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
